{
  "name": "sms-api",
  "version": "0.0.1",
  "description": "Node API for School Management System",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"npm run start:watch\"",
    "start": "node dist/index.js",
    "start:watch": "nodemon dist/index.js",
    "build": "tsc",
    "build:watch": "tsc -w",
    "lint": "standard \"src/**/*.ts\"",
    "code-format": "standard \"src/**/*.ts\" --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zilurrane/sms-api.git"
  },
  "keywords": [
    "NodeJS",
    "API",
    "SMS",
    "School"
  ],
  "author": "LifeCOMPILERS",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zilurrane/sms-api/issues"
  },
  "homepage": "https://github.com/zilurrane/sms-api#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7",
    "standard": "^12.0.1",
    "typescript": "^3.2.1"
  }
}
